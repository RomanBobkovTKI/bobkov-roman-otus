<h1>Редактировать {{title}}</h1>

<div class="row">
    <div class="col s12">
        <form 
            action="/protected/lesson/edit" 
            method="POST">
            <div class="input-field col s6">
                <input name="title" type="text" class="validate" required value={{title}}>
                <label for="title">Название урока</label>
                <span class="helper-text" data-error="Введите название урока" data-success="right"></span>
            </div>

            <div class="input-field col s6">
                <input name="desc" type="text" class="validate" required value={{desc}}>
                <label for="desc">Описание урока</label>
                <span class="helper-text" data-error="Введите описание урока" data-success="right"></span>
            </div>

            <div class="input-field col s6">
                <input name="videoSrc" type="text" class="validate" required value={{videoSrc}}>
                <label for="desc">Ссылка на видео</label>
                <span class="helper-text" data-error="Введите ссылку на видео" data-success="right"></span>
            </div>

            <input type="hidden" name="id" value={{id}}>

            <button class="btn btn-primary">Редактировать урок</button>
        </form>
    </div>
</div>