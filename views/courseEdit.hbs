<h1>Редактировать {{title}}</h1>

<div class="row">
    <div class="col s12">
        <form 
            action="/protected/courses/edit" 
            method="POST">
            <div class="input-field col s6">
                <input name="title" type="text" class="validate" required value={{title}}>
                <label for="title">Название курса</label>
                <span class="helper-text" data-error="Введите название" data-success="right"></span>
            </div>

            <div class="input-field col s6">
                <input name="desc" type="text" class="validate" required value={{desc}}>
                <label for="desc">Описание курса</label>
                <span class="helper-text" data-error="Введите описание курса" data-success="right"></span>
            </div>

            <input type="hidden" name="id" value={{id}}>

            <button class="btn btn-primary">Редактировать курс</button>
        </form>
    </div>
</div>