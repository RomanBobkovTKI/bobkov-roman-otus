<h1 class="center">{{title}}</h1>
<video width="400" height="300" src="{{videoSrc}}"></video>
<p class="center">{{desc}}</p>



<div class="row">
    <div class="col s12 m6">
    {{#if comments.length}}
            {{#each comments}}
                <div class="row">
                    <div class="col s12 m12">
                    <div class="card blue-grey darken-1">
                        <div class="card-content white-text">
                        <span class="card-title">{{author}}</span>
                        <p>{{text}}</p>
                        <div class="card-action">
                        <a href="/protected/lesson/{{id}}/deleteComment" method="delete">Удалить</a>
                        </div>
                        </div>
                    </div>
                    </div>
                </div>
            {{/each}}
            {{else}}
                <p class="center">Комментариев пока нет</p>
            {{/if}}
        </div>
</div>

<div class="row">
    <div class="col s12 m6">
        <a class="center waves-effect waves-light btn btn-primary" 
            href="/protected/lesson/{{lesson_id}}/addComment">
            Добавить Комментарий
        </a>
    </div>
</div>